<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvalidController</servlet-name>
        <servlet-class>controller.auth.InvalidController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeniedController</servlet-name>
        <servlet-class>controller.auth.DeniedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimetableController</servlet-name>
        <servlet-class>controller.main.TimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>controller.main.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleController</servlet-name>
        <servlet-class>controller.main.ScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceCheckController</servlet-name>
        <servlet-class>controller.main.AttendanceCheckController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceReportController</servlet-name>
        <servlet-class>controller.main.AttendanceReportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvalidController</servlet-name>
        <url-pattern>/invalid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeniedController</servlet-name>
        <url-pattern>/denied</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimetableController</servlet-name>
        <url-pattern>/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleController</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceCheckController</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceReportController</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
